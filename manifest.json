{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.1",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.douyin.com/*",
    "*://*.tiktok.com/*"
  ],
  "action": {
    "default_title": "下载视频"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.douyin.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
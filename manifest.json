{
  "manifest_version": 3,
  "name": "短视频下载助手",
  "version": "1.0",
  "description": "支持抖音、TikTok等平台视频下载",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.douyin.com/*",
    "*://*.tiktok.com/*"
  ],
  "action": {
    "default_title": "下载视频"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.douyin.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"]
    }
  ]
} 